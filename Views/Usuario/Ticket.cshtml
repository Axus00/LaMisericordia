
@{
    ViewData["Title"] = "Ticket";
    <link rel="stylesheet" href="~/css/ticket.css" asp-append-version="true" />
}

<div class="row d-flex justify-content-between mb-5">

        <img class="logo ms-4" src="../assets/img/Logo.png" alt="Descripción de la imagen">    

        <img class="logoWifi me-4" src="../assets/img/iconWifiFree.png" alt="Descripción de la imagen">

</div>


<div class="container mt-5" style="height: 65vh;">

    <div class="d-flex flex-column justify-content-center align-item-center" style="height: 100%;">
        <div class="row d-flex flex-column justify-content-center align-items-center">
            <div class="col-md-7 containerInfo text-center d-flex flex-column justify-content-center">
                <h2 class="textID mb-2">ID: <span>@ViewBag.user</span></h2>
                <h2 class="textDate mb-3">Fecha: <span>@ViewBag.FechaActualInicio</span></h2>
                <h3 class="textName mb-3">CLINICA LA MISERICORDIA</h3>
                <h2 class="textDescription mb-2">Su turno es: ID: @ViewBag.IDuser</h2>
                <h1 class="bold ticket"> 
                    @ViewBag.CodigoTurno
                </h1>
                <div class="row d-flex justify-content-center">
                    <img class="qrGenerator" src="data:image/png;base64,@ViewBag.QRCodeImage" />
                </div>
            </div>
        </div>
        
    </div>
</div>