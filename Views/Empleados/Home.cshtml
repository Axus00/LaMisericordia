@{
    ViewData["Title"] = "Home";
}

<head>
    <link rel="stylesheet" href="~/css/SkormJF.css" />
</head>
<body>
<div class="container">
    <div class="top">
        <a class="btn btn-xm btn-dark mb-3 mt-3" asp-controller="Empleados" asp-action="Logout">Cerrar Sesión</a>
        <h1 class="text-center mb-4">Asesor del Módulo # @ViewBag.modulo</h1>    
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <h1>Turnos en Pantalla</h1>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Turno</th>
                        <th scope="col">Documento de usuario</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Modulo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var Turnos in Model){
                        if(@Turnos.Estado == "En proceso"){
                            <tr>
                                <th scope="row">@Turnos.Id</th>
                                <td>@Turnos.NameTurno</td>
                                <td>1023626270</td>
                                <td>@Turnos.Estado</td>
                                <td>@Turnos.Modulo</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Empleados" asp-action="Liberar" asp-route-id = "@Turnos.Id">Liberar</a>
                                    <a class="btn btn-danger" asp-controller="Empleados" asp-action="Ausente" asp-route-id= "@Turnos.Id">Ausente</a>
                                    <a class="btn btn-danger" asp-controller="Empleados" asp-action="Llamar" asp-route-id="@Turnos.Id">Llamar</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <br>
        <br>
        <div class="col-md-12">
            <br>
            <br>
            <br>
            <div class="" >
                <h1>Gestor Turnos</h1>
                <a class="btn btn-info" asp-controller="Empleados" asp-action="Medicamentos">Medicamentos</a>
                <a class="btn btn-primary" asp-controller="Empleados" asp-action="Pagos">Realizar Pagos</a>
                <a class="btn btn-danger" asp-controller="Empleados" asp-action="General">Cita General</a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Turno</th>
                        <th scope="col">Documento De usuario</th>
                        <th scope="col">Tipo de Turno</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var Turnos in Model){
                        if(@Turnos.Estado == "En espera"){
                            <tr>
                                <th scope="row">@Turnos.Id</th>
                                <td>@Turnos.NameTurno</td>
                                <td>1023626270</td>
                                <td>@Turnos.typeServicio</td>
                                <td>@Turnos.Estado</td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Empleados" asp-action="SubirTurno" asp-route-id="@Turnos.Id" onclick="ActualizarPagina()">Subir Turno</a>
                                </td>

                            </tr>
                        }

                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div> *@


