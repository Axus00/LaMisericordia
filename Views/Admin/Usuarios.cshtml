<section class="Submain">
  <div class="container Overflow Border">
  <h1 class="text-center">Usuarios</h1>
  <div class="row RowTable">
    <div class="col-md-9">

      <form class="form d-flex gap-3 mb-3" asp-controller="Admin" asp-action="SearchUsers" method="get">
            <input class="form-control" type="text" name="SearchString" placeholder="Buscar...">
            <button class="btn btn-sm btn-primary" type="submit">Search</button>
      </form>

      <table class="table table-hover table-striped text-center">
        <thead class="table table-dark text-center">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Documento</th>
            <th scope="col">Atenci√≥n Preferencial</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          @foreach(var Usuarios in Model){
              <tr>
                  <th scope="row">@Usuarios.Id</th>
                  <td>@Usuarios.DocumentoIdentidad</td>
                  <td>@Usuarios.typeDocument</td>
                  <td>
                      <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@Usuarios.Id">Delete</a>
                  </td>
              </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
</div>
</section>




